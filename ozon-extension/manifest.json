{
  "manifest_version": 3,
  "name": "OZON Product Info",
  "version": "1.0.1",
  "description": "Показывает информацию о товарах из базы при наведении на артикул",
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://192.168.0.44:5000/*",
    "http://192.168.0.44/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "https://seller.ozon.ru/*"
      ],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_idle"
    }
  ]
}
